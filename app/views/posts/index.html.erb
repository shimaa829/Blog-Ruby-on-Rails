
<h1>Listing Posts</h1>
 
<%= link_to 'Add Post', new_post_path %>
<table border='3'>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Delete', post_path(post), method: :delete, 
                              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
