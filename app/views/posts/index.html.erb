
<% content_for :page_title,  "Posts" %>

<div class="section">
	<div class="container">
		<% @posts.each do |post| %>

	<div class="card">
		  <div class="card-content">
		    <div class="media">
		      <div class="media-content">
		        <p class="title is-4"><%= link_to post.title, post  %></p>
                 <p class="is-4"><%= link_to post.user.name, post %></p> 
		      </div>
		    </div>
		    <div class="content">
		     	<%= post.content %>
		    </div>
		    <div class="comment-count">
		    	<span class="tag is-rounded"><%= post.comments.count %> comments</span>
		        
            </div>
            <div class="buttons">
                <p class="level-item">
		    	<%= link_to "Update", edit_post_path(post), class:"button is-info m-3" %>
                <%= link_to "Show", post_path(post), class:"button is-info" %>
                <%= link_to "Delete", post_path(post), class:"button is-danger", method: :delete %>
		  	   </p>
                 
            </div>
		  </div>
		</div>
		<% end %>
	</div>
</div>
